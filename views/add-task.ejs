<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRUPNfO9kV+2cxrN2D7K9hG8GA5r3ERLPB8N1LlA"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/styles.css" />
		<title>Add Task</title>
	</head>
	<body>
		<div class="container mt-4">
			<!-- Page Title -->
			<h1 class="text-primary text-center mb-4">Add a New Task</h1>

			<!-- Form for Adding a New Task -->
			<form action="/tasks" method="POST">
				<!-- Task Title -->
				<div class="mb-3">
					<label for="title" class="form-label">Title:</label>
					<input
						type="text"
						id="title"
						name="title"
						class="form-control"
						required
						minlength="3"
						maxlength="100"
					/>
				</div>

				<!-- Task Description -->
				<div class="mb-3">
					<label for="description" class="form-label">Description:</label>
					<textarea
						id="description"
						name="description"
						class="form-control"
						rows="4"
					></textarea>
				</div>

				<!-- Task Status -->
				<div class="mb-3">
					Status: {this.props.task.status ? (
					<input type="checkbox" name="status" />
					) : (
					<input type="checkbox" name="status" />
					)}
				</div>

				<!-- Task Due Date -->
				<div class="mb-3">
					<label for="dueDate" class="form-label">Due Date:</label>
					<input
						type="date"
						id="dueDate"
						name="dueDate"
						class="form-control"
						required
					/>
				</div>

				<!-- Task Category -->
				<div class="mb-3">
					<label for="category" class="form-label">Category:</label>
					<select id="category" name="category" class="form-select">
						<option value="">Select a Category</option>
						<option value="Personal">Personal</option>
						<option value="Work">Work</option>
						<option value="Per Scholas Bootcamp">Per Scholas Bootcamp</option>
					</select>
				</div>

				<!-- Assign Task to a User -->
				<div class="mb-3">
					<label for="user" class="form-label">Assign to User:</label>
					<select id="user" name="user" class="form-select">
						<option value="">Unassigned</option>

						<option value="ID">Name</option>
					</select>
				</div>

				<!-- Submit Button -->
				<button type="submit" class="btn btn-primary btn-lg w-100">
					Add Task
				</button>
			</form>
		</div>
	</body>
</html>
