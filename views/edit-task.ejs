<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRUPNfO9kV+2cxrN2D7K9hG8GA5r3ERLPB8N1LlA"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css">
    <title>Edit Task</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Edit Task</h1>

        <!-- Display Error Message (if any) -->
        <% if (error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <!-- Task Edit Form -->
        <form action="/tasks/<%= task.id %>?_method=PUT" method="POST" class="mx-auto" style="max-width: 600px;">
            <!-- Task Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                    type="text"
                    id="title"
                    name="title"
                    class="form-control"
                    value="<%= task.title %>"
                    required
                    minlength="3"
                    maxlength="100"
                />
            </div>

            <!-- Task Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea
                    id="description"
                    name="description"
                    class="form-control"
                    rows="4"
                ><%= task.description %></textarea>
            </div>

            <!-- Task Status -->
            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select id="status" name="status" class="form-select">
                    <option value="Pending" <%= task.status === "Pending" ? "selected" : "" %>>Pending</option>
                    <option value="Completed" <%= task.status === "Completed" ? "selected" : "" %>>Completed</option>
                </select>
            </div>

            <!-- Task Due Date -->
            <div class="mb-3">
                <label for="dueDate" class="form-label">Due Date</label>
                <input
                    type="date"
                    id="dueDate"
                    name="dueDate"
                    class="form-control"
                    value="<%= task.dueDate %>"
                    required
                />
            </div>

            <!-- Task Category -->
<div class="mb-3">
    <label for="category" class="form-label">Category</label>
    <select id="category" name="category" class="form-select">
        <% categories.forEach((category) => { %>
            <option value="<%= category.id %>" <%= task.category === category.id ? "selected" : "" %>>
                <%= category.name %>
            </option>
        <% }) %>
    </select>
</div>

            <!-- Users Category -->
<label for="user">Assign to User:</label>
<select id="user" name="user" class="form-select">
    <% users.forEach((user) => { %>
        <option value="<%= user.id %>" <%= task.user === user.id ? "selected" : "" %>>
            <%= user.name %>
        </option>
    <% }) %>
</select>


            <!-- Form Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>
