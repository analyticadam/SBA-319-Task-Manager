<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRUPNfO9kV+2cxrN2D7K9hG8GA5r3ERLPB8N1LlA"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/styles.css" />
		<title>All Tasks</title>
	</head>
	<body>
		<div class="container mt-5">
			<h1 class="text-center mb-4">All Tasks</h1>

			<!-- Task List -->
			<ul class="list-group">
				<!-- <% tasks.forEach((Task) => { %> -->
				<li
					class="list-group-item d-flex justify-content-between align-items-center"
				>
					<!-- <div>
						<strong><%= Task.title %></strong>: <%= Task.description || "No
						description" %>
						<br />
						<em>Status: <%= Task.status %></em>
						<% if (Task.category) { %>
						<br />
						<em
							>Category: <%= categories.find((cat) => cat.id ===
							(Task.category)?.name || "Uncategorized" %></em
						>
						<% } %>
					</div> -->
					<div>
						<% tasks.map((Task, i) => { %>
						<div>
							<a href="/tasks/<%= Task._id %>"><%= Task.name %></a> is <%=
							Task.description %><br />
							<%= Task.status ? 'Pending' : 'Completed' %><br />
							<a href="/tasks/<%= Task._id %>/edit">Edit This Task</a>
							<form
								action="/tasks/<%= Task._id %>?_method=DELETE"
								method="POST"
							>
								<input type="submit" value="DELETE" />
							</form>
						</div>
						<% }); %>
					</div>
					<div>
						<a href="/tasks/<%= Task.id %>/edit" class="btn btn-warning btn-sm"
							>Edit</a
						>
						<form
							action="/tasks/<%= Task.id %>?_method=DELETE"
							method="POST"
							class="d-inline"
						>
							<button
								type="submit"
								class="btn btn-danger btn-sm"
								onclick="return confirm('Are you sure you want to delete this task?');"
							>
								Delete
							</button>
						</form>
					</div>
				</li>
				<% }) %>
			</ul>

			<!-- Back to Homepage -->
			<div class="mt-4 text-center">
				<a href="/" class="btn btn-secondary">Back to Home</a>
			</div>
		</div>
	</body>
</html>
